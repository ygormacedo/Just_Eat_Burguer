<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="@color/black">


    <ImageView
        android:id="@+id/imgJustEat"
        android:layout_width="192dp"
        android:layout_height="214dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/just_menor" />


    <TextView
        android:id="@+id/textViewItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/imgJustEat"
        android:layout_centerHorizontal="true"
        android:text="Itens selecionados:"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- Spinner para selecionar a forma de pagamento -->
    <Spinner
        android:id="@+id/spinnerPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewItems"
        android:layout_marginBottom="16dp" />

    <!-- BotÃ£o para finalizar o pedido -->
    <Button
        android:id="@+id/buttonFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Finalizar Pedido"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white" />

</RelativeLayout>